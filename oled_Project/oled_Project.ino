#define BUTTON_UP_PIN 5
#define BUTTON_SELECT_PIN 4
#define BUTTON_DOWN_PIN 3

// Potensiometer
#define potensioPin 3

// Jarak
#define trigPin 6
#define echoPin 7

const int NUM_ITEMS = 6;

char menu_items[NUM_ITEMS] [20] = {
  {"Dashboard"},
	{"Distance S."},
	{"Gyro"},
	{"Potensio"},
	{"Temp Sensor"},
  {"Battery"}
};

char scrollbar[] = {
  0,
  11,
  22,
  33,
  44,
  55
};

long duration;
int distance;

int button_up_clicked = 0;
int button_select_clicked = 0;
int button_down_clicked = 0;

int item_selected = 0;
int item_sel_previous;
int item_sel_next;
int btn = 1;

int current_screen = 1;

void setup() {
  pinMode(BUTTON_UP_PIN, INPUT_PULLUP);
  pinMode(BUTTON_SELECT_PIN, INPUT_PULLUP);
  pinMode(BUTTON_DOWN_PIN, INPUT_PULLUP);

  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);

  Serial.begin(115200);

  u8g.setFont(u8g_font_tpssb);
  u8g.setColorIndex(1);

}

void loop() {

if (current_screen == 0) {

  if((digitalRead(BUTTON_UP_PIN) == LOW) && (button_up_clicked == 0)) { //Up button pressed
    item_selected = item_selected - 1;
    button_up_clicked = 1;
      Serial.println(item_selected);
    if(item_selected < 0) {
      item_selected = NUM_ITEMS - 1;
    }
  }
  if((digitalRead(BUTTON_DOWN_PIN) == LOW) && (button_down_clicked == 0)) { //Down button pressed
    item_selected = item_selected + 1;
    button_down_clicked = 1;
      Serial.println(item_selected);
    if(item_selected >= NUM_ITEMS) {
      item_selected = 0;
    }
  }

  if((digitalRead(BUTTON_UP_PIN) == HIGH) && (button_up_clicked == 1)) {
    button_up_clicked = 0;
  }
  if((digitalRead(BUTTON_DOWN_PIN) == HIGH) && (button_down_clicked == 1)) {
    button_down_clicked = 0;
  }
}

  if((digitalRead(BUTTON_SELECT_PIN) == LOW) && (button_select_clicked == 0)) {
    button_select_clicked = 1;
    if(current_screen == 0) {current_screen = 1;}
    else {current_screen = 0;}
  }
  if ((digitalRead(BUTTON_SELECT_PIN) == HIGH) && (button_select_clicked == 1)) { // unclick 
    button_select_clicked = 0;
  }

  item_sel_previous = item_selected - 1;
  if(item_sel_previous < 0) {item_sel_previous = NUM_ITEMS-1;}
  item_sel_next = item_selected + 1;
  if(item_sel_next >= NUM_ITEMS) {item_sel_next = 0;}

  u8g.firstPage();
  do {

if (current_screen == 0) {
    // Previous Item
    u8g.setFont(u8g_font_7x14);
    u8g.drawStr(24, 15, menu_items[item_sel_previous]);
    u8g.drawBitmapP( 4, 2, 16/8, 16, bitmap_icons[item_sel_previous]);

    // Selected Item
    u8g.setFont(u8g_font_7x14B);
    u8g.drawStr(24, 37, menu_items[item_selected]);
    u8g.drawBitmapP( 4, 24, 16/8, 16, bitmap_icons[item_selected]);

    // Next Item
    u8g.setFont(u8g_font_7x14);
    u8g.drawStr(24, 61, menu_items[item_sel_next]);
    u8g.drawBitmapP( 4, 46, 16/8, 16, bitmap_icons[item_sel_next]);
    
    u8g.drawBitmapP( 0, 22, 128/8, 21, epd_bitmap__item_sel_background); //Selected Background
    u8g.drawBitmapP( 120, 0, 8/8, 64, epd_bitmap__scrollbar_background); //Scrollbar Background
    u8g.drawBitmapP( 125, scrollbar[item_selected], 8/8, 64, epd_bitmap_scroll_handle); //Scrollbar handle
}
else if (current_screen == 1) {

  if((item_selected == 0) || (item_selected == 6)) {
    u8g.drawBitmapP(0, 0, 128/8, 64, epd_bitmap__dashboard_icon);
  }
  else if (item_selected == 1) {
    digitalWrite(trigPin, LOW);
    delayMicroseconds(2);
    digitalWrite(trigPin, HIGH);
    delayMicroseconds(10);
    digitalWrite(trigPin, LOW);
    duration = pulseIn(echoPin, HIGH);
    distance = (duration/2) / 29.1;
    u8g.drawBitmapP(0, 0, 128/8, 64, epd_bitmap_radar_icon);
    int jarak = 54 - distance;

    if(jarak <= 55) {
      u8g.setColorIndex(0);
      u8g.setFont(gamer_digits);
      u8g.setPrintPos(59, jarak);
      u8g.print(distance);
      u8g.setColorIndex(1);
      u8g.setFont(u8g_font_tpssb);
      delay(10);
    } 
  } 
  else if (item_selected == 2) {
    u8g.drawBitmapP(0, 0, 128/8, 64, epd_bitmap__error_icon);
  }
  else if (item_selected == 3) {
    int potensio = analogRead(potensioPin)/100;
    u8g.setPrintPos(49, 38);
    u8g.print(potensio);
  } 
  else if (item_selected == 4) {
  float suhu = dht.readTemperature();
  u8g.setPrintPos(49, 38);
  u8g.print(suhu);
  }
  else if ((item_selected == -1) || (item_selected == 5)) {
    u8g.drawBitmapP(0, 0, 128/8, 64, epd_bitmap__error_icon);
  }


}
   
  } while ( u8g.nextPage() );



